<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="0dp">

    <ImageView
        android:id="@+id/ImageEntry"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DateEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ImageEntry"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ImageEntry"
        android:layout_toRightOf="@+id/ImageEntry"
        android:text="12-12-2019"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#59A7B9"
        app:layout_constraintStart_toEndOf="@+id/ImageEntry"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/WeightEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ImageEntry"
        android:layout_toRightOf="@+id/ImageEntry"
        android:paddingTop="0dp"
        android:text="82 Kg"
        android:textColor="#59A7B9"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ImageEntry"
        app:layout_constraintTop_toBottomOf="@+id/DateEntry" />

    <ImageView
        android:id="@+id/deletebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>


