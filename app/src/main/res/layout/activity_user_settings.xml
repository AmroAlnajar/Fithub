<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59A7B9"
    tools:context=".UserSettings">

    <TextView
        android:id="@+id/nothing"
        android:layout_width="318dp"
        android:layout_height="65dp"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:gravity="center"
        android:text="User Settings"
        android:textColor="@color/ap_white"
        android:textSize="45sp"
        app:fontFamily="@font/convergence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newpass"
        android:layout_width="272dp"
        android:layout_height="47dp"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="16dp"

        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="251dp"
        android:backgroundTint="@color/ap_white"
        android:ems="10"
        android:hint="New password"
        android:inputType="textPassword"
        android:textColor="@color/ap_white"
        app:layout_constraintBottom_toTopOf="@+id/savepassbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentpass" />

    <EditText
        android:id="@+id/currentpass"
        android:layout_width="272dp"
        android:layout_height="47dp"
        android:layout_marginBottom="400dp"
        android:backgroundTint="@color/ap_white"

        android:ems="10"
        android:hint="Current password"
        android:inputType="textEmailAddress"
        android:textColor="@color/ap_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/savepassbutton"
        android:layout_width="137dp"
        android:layout_height="52dp"
        android:layout_marginStart="137dp"
        android:layout_marginLeft="137dp"

        android:layout_marginEnd="137dp"
        android:layout_marginRight="137dp"
        android:layout_marginBottom="34dp"
        android:background="@color/ap_white"
        android:onClick="changepassword"
        android:text="Save"
        android:textColor="#59A7B9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>